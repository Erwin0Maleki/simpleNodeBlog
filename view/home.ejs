<!DOCTYPE html>
<html lang="en">

  <%include header.ejs%>

<body>
    <div class="container">
        <header class="blog-header py-3">
                <div class="row flex-nowrap justify-content-between align-items-center">
                    <div class="col-4 pt-1">

                    </div>
                    <div class="col-4 text-center">
                        <a class="blog-header-logo text-dark h2" href="/">Large</a>
                    </div>
                        <div class="col-4 d-flex justify-content-end align-items-center">
                            <a class="text-muted" href="#">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
                                stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mx-3"
                                focusable="true" role="img">
                                <title>Search</title>
                                <circle cx="10.5" cy="10.5" r="7.5"></circle>
                                <line x1="21" y1="21" x2="15.8" y2="15.8"></line>
                                </svg>
                            </a>
                        </div>
                </div>
        </header>
        <div class="nav-scroller py-1 mb-2">
            <nav class="nav d-flex justify-content-around">
                <% categories.forEach((category)=>{ %>
                  <a class="p-2 text-muted" href="#"><%=category.categoryName%></a>
                  <% }); %> 
            </nav>
        </div>
          <% posts.forEach((post)=>{ %>
            <div class="jumbotron p-0 text-white rounded bg-dark position-relative overflow-hidden s">
                    <img src=<%= post.img %> alt="" class="position-absolute w-100 img-bg-post">
                <div class="col-md-6 px-0  p-3 p-md-5 ">
                  <h1 class="display-4 font-italic"><%= post.title %></h1>
                  <p class="lead my-3"><%= post.content.substr(0,130)%>...</p>
                  <p class="lead mb-0"><a href="/post/<%= post.slug %>"" class="text-white font-weight-bold">Continue reading...</a></p>
                </div>
            </div>
                <% }); %> 

    <footer class="blog-footer">
            <p>
              <a href="#">Back to top</a>
            </p>
          </footer>
    <script src="js/bootstrap.js"></script>
</body>

</html>