<!DOCTYPE html>
<html lang="en">

<%include ../header.ejs%>

<body>
   <div class="container-fluid">
      <header>
        <%include dashboardMenu.ejs%>
      </header>
      <div class="container pt-4">
        <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">post name</th>
                <th scope="col">options</th>
              </tr>
            </thead>
            <tbody>
              <%posts.forEach((post)=>{%>
                <tr>
                  <td><a href="http://localhost:3000/post/<%= post.slug %>"><%= post.title %></td></a>
                  <td>
                      <a href="http://localhost:3000/admin/dashboard/posts/edit/<%-post._id%>"><button type="button" class="btn btn-primary">Edit</button></a>
                      <a href="http://localhost:3000/admin/dashboard/posts/delete/<%-post._id%>"><button type="button" class="btn btn-danger">Delete</button></a>
                  </td>
                </tr>
                <%});%>
            </tbody>
          </table>
          <a href="http://localhost:3000/admin/dashboard/posts/add"><button type="button" class="btn btn-success">New Post</button></a>
   </div>
  </div>
        <script src="../../assets/js/bootstrap.js"></script>
</body>

</html>